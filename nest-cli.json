{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../views/**/*.njk",
        "outDir": "./dist/views",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "dist/i18n"
      }
    ]
  }
}
